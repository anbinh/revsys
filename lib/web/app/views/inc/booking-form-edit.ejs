<div class="row">
	<div class="col-xs-offset-3 col-xs-6">
		<form id="booking-form" action="/booking/<%=booking.id%>" method="POST">
		  
		  <div class="form-group ">
		    <label for="title">Title*</label>
		    <input type="text" id="title" name="title" class="form-control " value="<%=booking.title%>">
		  </div>

		  <div class="form-group">
		    <label for="description">Description</label>
		    <textarea type="textarea"  rows="6" name="description" class="form-control" id="description" placeholder="Your Description"><%=booking.description%></textarea> 
		  </div>
		  <div class="form-group ">
		    <label for="label">Labels</label>
		    <input type="text" id="label" name="labels" class="form-control " value="<%=booking.labels%>">
		    <p class="help-block">Set your custom defined labels for this booking. Comma-separated values</p>
		  </div>

		  <div class="form-group">
		    <label for="priority">Priority</label>
		    <div>
		    	<select name="priority" id="priority" style="width: 100%">
		    		<option value="1">Priority</option>
		    		<option value="1" <%= (booking.priority == 1) ? 'selected' : '' %> >1</option>
		    		<option value="2" <%= (booking.priority == 2) ? 'selected' : '' %> >2</option>
		    		<option value="3" <%= (booking.priority == 3) ? 'selected' : '' %> >3</option>
		    		<option value="4" <%= (booking.priority == 4) ? 'selected' : '' %> >4</option>
		    		<option value="5" <%= (booking.priority == 5) ? 'selected' : '' %> >5</option>
					<option value="6" <%= (booking.priority == 6) ? 'selected' : '' %> >6</option>
		    		<option value="7" <%= (booking.priority == 7) ? 'selected' : '' %> >7</option>
		    		<option value="8" <%= (booking.priority == 8) ? 'selected' : '' %> >8</option>
		    		<option value="9" <%= (booking.priority == 9) ? 'selected' : '' %> >9</option>
		    	</select>
		    </div>
		     <p class="help-block">Set the booking's priority</p>
		  </div>

		  <div class="row">
		  	<div class="col-xs-6">
		  		<div class="form-group disabled">
		  		  <label for="floor">Floor</label>
		  		  <input type="text" class="form-control " id="floor" value="<%=agent.floor%>" disabled>
		  		</div>
		  	</div>
		  	<div class="col-xs-6">
		  		<div class="form-group disabled">
		  		  <label for="desk">Desk</label>
		  		  <input type="text" class="form-control " id="desk" value="<%=agent.desk%>" disabled>
		  		</div>
		  	</div>
		  </div>

		  
		  <div class="row">
		  	<div class="col-xs-12">
		  		<div class="form-group disabled">
		  		  <label for="team">Team Name</label>
		  		  <select name="team_id" id="team" class="form-control">
		  		  	<% agent.teams.forEach(function(team){%>
						<option value="<%=team.id%>"><%=team.name%></option>
		  		  	<%})%>
		  		  </select>
		  		</div>
		  	</div>
		  	<div class="col-xs-6" style="display: none;">
		  		<div class="form-group disabled">
		 		  <label for="agent">Agent Name</label>
		 		  <input type="text" id="agent" name="agent_name" class="form-control " value="<%=agent.first_name + " " + agent.last_name%>" disabled>
		 		</div>
		  	</div>
		  </div>
		  <input type="hidden" name="agent_id" value="<%=agent.id%>">
		  
		

		  <div class="form-group ">
		    <label for="startdate">Start Date</label>
		    <input type="text" id="startdate" class="form-control" disabled value="<%=booking.startdate%>" >
		    <input type="hidden" name="startdate"  value="<%=booking.startdate%>">
		  </div>

		  <div class="form-group ">
		    <label for="enddate">End Date</label>
		    <input type="text" id="enddate" class="form-control " disabled value="<%=booking.enddate%>" >
		    <input type="hidden" name="enddate"  value="<%=booking.enddate%>">
		  </div>

		  <input type="hidden" name="id"  value="<%=booking.id%>">

		  <div style="text-align: center;">
		  	<button type="submit" class="btn btn-default">Create This Booking</button>
		  </div>
		</form>

	</div>
</div>