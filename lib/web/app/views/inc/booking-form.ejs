<div class="row">
	<div class="col-xs-offset-3 col-xs-6">
		<form id="booking-form" action="/book" method="POST">
		  
		  <div class="form-group ">
		    <label for="title">Title*</label>
		    <input type="text" id="title" name="title" class="form-control " >
		  </div>

		  <div class="form-group">
		    <label for="description">Description</label>
		    <textarea type="textarea"  rows="6" name="description" class="form-control" id="description" placeholder="Your Description"></textarea> 
		  </div>
		  <div class="form-group ">
		    <label for="label">Labels</label>
		    <input type="text" id="label" name="labels" class="form-control " >
		    <p class="help-block">Set your custom defined labels for this booking. Comma-separated values</p>
		  </div>

		  <div class="form-group">
		    <label for="priority">Priority</label>
		    <div>
		    	<select name="priority" id="priority" style="width: 100%">
		    		<option value="1">Priority</option>
		    		<option value="1">1</option>
		    		<option value="2">2</option>
		    		<option value="3">3</option>
		    		<option value="4">4</option>
		    		<option value="5">5</option>
					<option value="6">6</option>
		    		<option value="7">7</option>
		    		<option value="8">8</option>
		    		<option value="9">9</option>
		    	</select>
		    </div>
		     <p class="help-block">Set the booking's priority</p>
		  </div>

		  <div class="row">
		  	<div class="col-xs-6">
		  		<div class="form-group disabled">
		  		  <label for="floor">Floor</label>
		  		  <input type="text" class="form-control " id="floor" value="<%=agent.floor%>" disabled>
		  		</div>
		  	</div>
		  	<div class="col-xs-6">
		  		<div class="form-group disabled">
		  		  <label for="desk">Desk</label>
		  		  <input type="text" class="form-control " id="desk" value="<%=agent.desk%>" disabled>
		  		</div>
		  	</div>
		  </div>

		  
		  <div class="row">
		  	<div class="col-xs-6">
		  		<div class="form-group disabled">
		  		  <label for="team">Team Name</label>
		  		  <select name="team_id" id="team" class="form-control">
		  		  	<% agent.teams.forEach(function(team){%>
						<option value="<%=team.id%>"><%=team.name%></option>
		  		  	<%})%>
		  		  </select>
		  		</div>
		  	</div>
		  	<div class="col-xs-6">
		  		<div class="form-group disabled">
		 		  <label for="agent">Agent Name</label>
		 		  <input type="text" id="agent" name="agent_name" class="form-control " value="<%=agent.first_name + " " + agent.last_name%>" disabled>
		 		</div>
		  	</div>
		  </div>
		  <input type="hidden" name="agent_id" value="<%=agent.id%>">
		  
		

		  <div class="form-group ">
		    <label for="startdate">Start Date</label>
		    <input type="text" id="startdate" class="form-control " value="<%=date%>" >
		    <input type="hidden" name="startdate"  value="<%=date%>">
		  </div>

		  <div class="form-group ">
		    <label for="enddate">End Date</label>
		    <input type="text" id="enddate" class="form-control " value="<%=date%>" >
		    <input type="hidden" name="enddate"  value="<%=date%>">
		  </div>

		  <div style="text-align: center;">
		  	<button type="submit" class="btn btn-default">Create This Booking</button>
		  </div>
		</form>

	</div>
</div>